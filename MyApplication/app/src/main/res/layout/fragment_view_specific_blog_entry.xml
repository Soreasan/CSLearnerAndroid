<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.weber.kadair.cs3270.cslearner.ViewSpecificBlogEntry">
    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/txvViewSpecificBlogEntryTitle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/txvViewSpecificBlogEntryDate"
        android:layout_below="@+id/txvViewSpecificBlogEntryTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is a sample blog entry.  This should be changed every time a user visits the page.  The goal is that I will be able to est having lots of data."
        android:id="@+id/txvViewSpecificBlogEntryText"
        android:layout_below="@+id/txvViewSpecificBlogEntryDate"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</ScrollView>